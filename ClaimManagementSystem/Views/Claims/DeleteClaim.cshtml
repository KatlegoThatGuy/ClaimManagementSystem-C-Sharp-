@{
}
@model Claim

<h1>Delete Claim</h1>

<div>
    <h4>Are you sure you want to delete this claim?</h4>
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Hours Worked</dt>
        <dd class="col-sm-10">@Model.HoursWorked</dd>

        <dt class="col-sm-2">Hourly Rate</dt>
        <dd class="col-sm-10">@Model.HourlyRate</dd>

        <dt class="col-sm-2">Additional Notes</dt>
        <dd class="col-sm-10">@Model.AdditionalNotes</dd>
    </dl>

    <form asp-action="DeleteClaim">
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("ListClaims", "Claims")" class="btn btn-secondary">Cancel</a>

    </form>
</div>